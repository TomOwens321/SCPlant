<p id="notice"><%= notice %></p>

<h1>Listing Genus</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Common name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @genus.each do |genus| %>
      <tr>
        <td><%= genus.name %></td>
        <td><%= genus.common_name %></td>
        <td><%= genus.description %></td>
        <td><%= link_to 'Show', genus %></td>
        <td><%= link_to 'Edit', edit_genus_path(genus) %></td>
        <td><%= link_to 'Destroy', genus, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

