<%= form_for(@seed) do |f| %>
  <% if @seed.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@seed.errors.count, "error") %> prohibited this seed from being saved:</h2>

      <ul>
      <% @seed.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :lot %><br>
    <%= f.text_field :lot %>
  </div>
  <div class="field">
    <%= f.label :plant_id %><br>
    <%= f.autocomplete_field :plant_name, autocomplete_plant_name_plants_path,
                              id_element: '#plant_id' %>
    <%= f.hidden_field :plant_id, id: "plant_id" %>
  </div>
  <div class="field">
    <%= f.label :collection_date %><br>
    <%= f.date_select :collection_date %>
  </div>
  <div class="field">
    <%= f.label :vendor_id %><br>
    <%= f.autocomplete_field :vendor_name, autocomplete_vendor_name_vendors_path,
                              id_element: '#vendor_id' %>
    <%= f.hidden_field :vendor_id, id: "vendor_id" %>
  </div>
  <div class="field">
    <%= f.label :location_id %><br>
    <%= f.autocomplete_field :location_name, autocomplete_location_name_locations_path,
                              id_element: '#location_id' %>
    <%= f.hidden_field :location_id, id: "location_id" %>
  </div>
  <div class="field">
    <%= f.label :collected_by %><br>
    <%= f.text_field :collected_by %>
  </div>
  <div class="field">
    <%= f.label :clean %><br>
    <%= f.check_box :clean %>
  </div>
  <div class="field">
    <%= f.label :quantity %><br>
    <%= f.number_field :quantity %>
  </div>
  <div class="field">
    <%= f.label :remaining %><br>
    <%= f.number_field :remaining %>
  </div>
  <div class="field">
    <%= f.label :notes %><br>
    <%= f.text_area :notes %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
