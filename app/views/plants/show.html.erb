<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @plant.name %>
</p>

<p>
  <strong>Family:</strong>
  <%= @plant.family_name %>
</p>

<p>
  <strong>Genus:</strong>
  <%= @plant.genus_name %>
</p>

<p>
  <strong>Species:</strong>
  <%= @plant.species_name %>
</p>

<p>
  <strong>Common name:</strong>
  <%= @plant.common_name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @plant.description %>
</p>

<%= link_to 'Edit', edit_plant_path(@plant) %> |
<%= link_to 'Back', :back %>

<div id="locations">
  <table class="display">
    <thead>
      <th colspan="4"><%= "Places to find #{@plant.name} in the wild" %></th>
    </thead>
    <tbody>
      <%= render partial: "locations/location", collection: @plant.locations.uniq %>
    </tbody>
  </table>
</div>